{
    "name": "@es-joy/escodegen",
    "description": "ECMAScript code generator",
    "homepage": "http://github.com/es-joy/escodegen",
    "bugs": "http://github.com/es-joy/escodegen/issues",
    "type": "module",
    "main": "./dist/escodegen.cjs",
    "exports": {
        "node": {
            "import": "./dist/escodegen-node.esm.js",
            "require": "./dist/escodegen.cjs"
        },
        "browser-import": "./dist/escodegen-browser.esm.js",
        "browser": "./dist/escodegen-browser.umd.js"
    },
    "bin": {
        "esgenerate": "./bin/esgenerate.js",
        "escodegen": "./bin/escodegen.js"
    },
    "keywords": [
        "code",
        "generation"
    ],
    "files": [
        "LICENSE.BSD",
        "README.md",
        "bin",
        "dist",
        "package.json"
    ],
    "version": "3.1.0",
    "engines": {
        "node": ">=6.0"
    },
    "author": {
        "name": "Yusuke Suzuki",
        "email": "utatane.tea@gmail.com",
        "web": "http://github.com/Constellation"
    },
    "contributors": [],
    "repository": {
        "type": "git",
        "url": "http://github.com/es-joy/escodegen.git"
    },
    "dependencies": {
        "@es-joy/estraverse": "^6.0.0",
        "esprima": "^4.0.1",
        "esutils": "^2.0.3",
        "optionator": "^0.9.1"
    },
    "optionalDependencies": {
        "source-map": "~0.7.3"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^21.0.3",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@rollup/plugin-replace": "^4.0.0",
        "acorn": "^8.7.0",
        "babel-plugin-transform-es2017-object-entries": "0.0.5",
        "c8": "^7.11.0",
        "chai": "^4.3.6",
        "chai-exclude": "^2.1.0",
        "eslint": "^8.12.0",
        "mocha": "^9.2.2",
        "rollup": "^2.70.1",
        "rollup-plugin-terser": "^7.0.2",
        "source-map": "~0.7.3"
    },
    "license": "BSD-2-Clause",
    "c8": {
        "checkCoverage": true,
        "branches": 100,
        "lines": 100,
        "functions": 100,
        "statements": 100,
        "reporter": [
            "lcov",
            "text"
        ],
        "exclude": [
            "test"
        ]
    },
    "scripts": {
        "example-escodegen": "./bin/escodegen.js benchmark/old.cjs",
        "example-generate": "./bin/esgenerate.js benchmark/asts/backbone-0.5.3-ast.json",
        "build": "rollup -c",
        "lint": "eslint --rulesdir tools/rules/ .",
        "unit-test": "c8 mocha --require chai/register-expect.js test/*.js --timeout 100000",
        "test": "npm run unit-test && npm run lint",
        "release": "node tools/release.js"
    }
}
